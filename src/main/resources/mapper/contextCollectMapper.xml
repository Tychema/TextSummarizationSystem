<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynu.edu.textsummarizationsystem.mapper.ContextCollectMapper">
    <select id="getContextCollectById" resultType="ynu.edu.textsummarizationsystem.beans.ContextCollect">
        SELECT * FROM context_collect where userid=#{userid} ORDER BY `time` DESC LIMIT #{page},10;
    </select>

    <select id="getAllContextCollect" resultType="ynu.edu.textsummarizationsystem.beans.ContextCollect">
        SELECT * FROM context_collect;
    </select>
</mapper>